# Base de données
DATABASE_URL="postgresql://postgres:password@localhost:5432/srv-mon?schema=public"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-at-least-32-chars" # Générer avec `openssl rand -base64 32`

# Configuration d'e-mail pour les notifications
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="user@example.com"
EMAIL_SERVER_PASSWORD="your-smtp-password"
EMAIL_FROM="notifications@votredomaine.com"

# Intervalle de vérification des serveurs (en millisecondes)
SERVER_CHECK_INTERVAL=300000 # 5 minutes par défaut

# Limites
MAX_SERVERS_PER_GROUP=100
MAX_GROUPS_PER_USER=20
MAX_NOTIFICATIONS_PER_SERVER=10

# Délai d'expiration pour les requêtes de surveillance (en millisecondes)
REQUEST_TIMEOUT=10000 # 10 secondes par défaut

# Logs
LOG_LEVEL="info" # debug, info, warn, error

# Configuration optionnelle pour Redis (cache & files d'attente)
# REDIS_URL="redis://localhost:6379"

# Configuration pour le stockage de fichiers (optionnel)
# S3_ENDPOINT=""
# S3_ACCESS_KEY=""
# S3_SECRET_KEY=""
# S3_BUCKET_NAME=""
# S3_REGION=""

# Paramètres pour l'API SMS (optionnel)
# SMS_API_KEY=""
# SMS_FROM_NUMBER=""

# Paramètres pour les webhooks (optionnel)
# WEBHOOK_SECRET=""
